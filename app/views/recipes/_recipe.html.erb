<%= link_to recipe_path(recipe), class: "card d-flex w-100 flex-row p-2 text-decoration-none text-dark", style: "width: 18rem;", 'data-bs-toggle': 'tooltip', 'data-bs-placement': 'top', title: 'Click to view recipe' do %>
  <div class="w-25 d-flex flex-column justify-content-center align-items-center gap-2">
    <h3><%= recipe.name %></h3>
    <%= button_to "Remove", @recipe, method: :delete, class: "btn btn-danger" %>
  </div>
  <div class="card-body w-75">
    <p class="card-text"><%= recipe.description %>.</p>
  </div>
<% end %>
