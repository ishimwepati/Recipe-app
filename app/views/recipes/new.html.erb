<div class="container mt-5">
  <p class="page-title">New Recipe is being created by <i> <%= current_user.name %> </i> </p>
  
  <%= form_with model: @recipe, url: recipes_path, class: 'create-form' do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
      <span></span>
    </div>

    <div class="mb-3">
      <%= f.label :preparation_time, class: "form-label" %>
      <%= f.number_field :preparation_time, class: "form-control", step: 0.01 %>
      <span>Hour</span>
    </div>

    <div class="mb-3">
      <%= f.label :cooking_time, class: "form-label" %>
      <%= f.number_field :cooking_time, class: "form-control", step: 0.01 %>
      <span>Hour</span>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
      <span></span>
    </div>

    <div class="mb-3 form-check">
      <%= f.check_box :public, class: "form-check-input" %>
      <%= f.label :public, class: "form-check-label" %>
    </div>

    <div class="mb-3">
      <%= f.submit "Add Recipe", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
