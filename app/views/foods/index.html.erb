<p style="color: green"><%= notice %></p>

<h1>Foods</h1>

<div id="foods">
    <ul class="list-group list-group-horizontal w-100">
      <li class="list-group-item list-group-item-dark fs-6 fw-bold w-100">Food</li>
      <li class="list-group-item list-group-item-dark fs-6 fw-bold w-100">Measurement unit</li>
      <li class="list-group-item list-group-item-dark fs-6 fw-bold w-100">Unit Price</li>
      <li class="list-group-item list-group-item-dark fs-6 fw-bold w-100">Actions</li>
    </ul>
  <% @foods.each do |food| %>
    <%= render food %>
  <% end %>
</div>
