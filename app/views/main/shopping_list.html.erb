<div class="container mt-5">
  <h1 class="mb-4">General Shopping List</h1>
  <p>Amount of food items to buy: <%= @foods.length %></p>
  <p>Total value of food needed: $<%= @total_value %></p>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.quantity %> <%= food.measurment_unit %></td>
          <td>$ <%= food.price * food.quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
